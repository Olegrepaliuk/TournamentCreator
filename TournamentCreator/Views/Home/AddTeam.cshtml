
@{
    Layout = null;
    ViewBag.Title = "AddTeam";
}

<!DOCTYPE html>

<html>
<head>
    <title>Add Team</title>
</head>
<body>
    <table cellspacing="0" id="maket">
        <tr>
            <td id="leftcol">
                <h1>Tournament creator</h1>
            </td>
            <td id="spacer"></td>
            <td id="rightcol">
                <h3>You can <a href="/CreateTeam"> create new team</a> or add team from the list below: </h3>
                    <table border="1" cellpadding="0" cellspacing="0" width="100">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>City</th>
                                <th>Country</th>
                                <th>Action</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var t in ViewBag.AvailableTeams)
                            {
                                <tr>
                                    <td>@t.TName</td>
                                    <td>@t.City</td>
                                    <td>@t.Country</td>
                                    <td>
                                        @Html.ActionLink("Add team to group", "AddTeam", new { Team = t, tmtId = ViewBag.Tournamnet.Id })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />

            </td>
        </tr>
    </table>
</body>
</html>

